    private void btn_OkActionPerformed(java.awt.event.ActionEvent evt) {                                       
    
        String Palabra = txt_Palabra.getText();
        int contador = 0;
        
        for (int x=0; x<Palabra.length(); x++){
            if ((Palabra.charAt(x)=='a') || (Palabra.charAt(x)=='e')|| (Palabra.charAt(x)=='i') || (Palabra.charAt(x)=='o') || (Palabra.charAt(x)=='u')){
                contador++;
                
            }
        }
        
        lbl_Cantidaddevocales.setText(""+contador);
    }                                      

